<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <android.support.v7.widget.CardView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        cardview:cardElevation="5dp"
        cardview:cardBackgroundColor="@color/txbdc_white"
        cardview:contentPaddingBottom="10dp"
        cardview:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/prescription_image"
                android:src="@drawable/reach_across"
                android:layout_width="fill_parent"
                android:layout_height="135dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true" />
            <TextView
                android:id="@+id/last_played"
                android:text="Last played 2d ago"
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:layout_below="@id/prescription_image"
                android:textSize="12dp" />
            <ImageButton
                android:id="@+id/delete_prescription"
                android:src="@drawable/cancel_24px"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitXY"
                android:background="@color/txbdc_white"
                android:layout_below="@id/prescription_image"
                android:layout_alignRight="@id/prescription_image"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp" />
            <ImageButton
                android:id="@+id/edit_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/prescription_image"
                android:layout_toLeftOf="@id/delete_prescription"
                android:layout_marginTop="10dp"
                android:src="@drawable/mode_24px"
                android:scaleType="fitXY"
                android:background="@color/txbdc_white"
                android:layout_marginRight="10dp" />
            <TextView
                android:id="@+id/exercise_name"
                android:text="Left-to-Right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/last_played"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"
                android:textSize="24dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/device_name"
                android:layout_below="@id/exercise_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FitMi"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:textSize="16dp"
                android:textColor="@color/txbdc_lightgrey" />
            <TextView
                android:id="@+id/game_name"
                android:textSize="16dp"
                android:textColor="@color/txbdc_lightgrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:text="Breakout"
                android:layout_below="@id/device_name"/>
            <ImageButton
                android:id="@+id/save_assigned_exercise"
                android:src="@drawable/save"
                android:scaleType="centerInside"
                android:layout_height="wrap_content"
                android:layout_width="60dp"
                android:adjustViewBounds="true"
                android:background="@color/txbdc_white"
                android:layout_below="@id/device_name"
                android:layout_alignRight="@id/delete_prescription" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>